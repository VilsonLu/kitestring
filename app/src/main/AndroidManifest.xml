<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zeroh729.com.kitestring">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="zeroh729.com.kitestring.KiteString_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.main.activities.LoginActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="zeroh729.com.kitestring.ui.main.activities.MainActivity_"
            android:label="Home">
        </activity>

        <activity android:name=".ui.main.activities.AddFeedActivity_"></activity>

        <activity android:name=".ui.main.activities.FeedDetailActivity_"></activity>

        <activity android:name=".ui.main.activities.RegistrationFormActivity_"></activity>

        <activity android:name=".ui.main.activities.ChatActivity_"></activity>


        <receiver android:name="zeroh729.com.kitestring.utils.receivers.NetworkChangeReceiver_" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>


</manifest>